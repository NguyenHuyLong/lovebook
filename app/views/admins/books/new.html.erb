<%= provide :title, t("books") %>
<h1><%= t ".create_book" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admins, @book], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <% if @request %>
        <%= f.label :title %>
        <%= f.text_field :title, value: @request.book_name, class: "form-control" %>

        <%= f.label :author %>
        <%= f.text_field :author, value: @request.book_author, class: "form-control" %>
      <% else %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      <% end %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "ckeditor" %>

      <%= f.label :publish_date %>
      <%= f.date_field :publish_date, class: "form-control" %>

      <%= f.label :number_of_pages, t(".number_of_book") %>
      <%= f.number_field :number_of_pages, class: "form-control" %>

      <%= f.label :category %>
      <%= f.select :category_id, @categories.collect{|key| [key.name, key.id]},
        {include_blank: t("book.search.category_blank")}, {class: "form-control"} %>

      <%= f.label :image %>
      <%= f.file_field :image, class: "upload-image" %>

      <%= f.submit t(".create_book"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
