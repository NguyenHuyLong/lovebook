<%= provide :title, t("books") %>
<h1><%= t ".edit_book" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admins, @book], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "ckeditor" %>

      <%= f.label :publish_date %>
      <%= f.date_field :publish_date, class: "form-control" %>
      <br>
      <%= f.label :number_of_pages, t(".number_of_book") %>
      <%= f.number_field :number_of_pages, class: "form-control" %>

      <%= f.label :category %>
      <%= f.select :category_id, @categories.collect{|key| [key.name, key.id]}, class: "form-control" %>

      <%= f.label :image %>
      <%= image_tag @book.image.size.to_s %>
      <%= f.file_field :image, class: "upload-image" %>

      <%= f.submit t(".edit_book"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
