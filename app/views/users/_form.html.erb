<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, "Tên" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :pasword, "Mật khẩu" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t("user.confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <br>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

  <% unless @user.new_record? %>
    <div class="avatar_edit">
      <%= image_tag @user.avatar.thumb.to_s %>
      <% unless @user.avatar %>
        <%= f.label :remove_avatar, class: "checkbox" do %>
          <%= f.check_box :remove_avatar %>
          <span><%= t "remove_avatar" %></span>
        <% end %>
      <% end %>
      <%= f.file_field :avatar, class: "upload-image" %>
    </div>
  <% end %>
<% end %>
