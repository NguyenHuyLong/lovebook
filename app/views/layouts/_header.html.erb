<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title_page"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path, id: "head" %></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to t("books"), admins_books_path, id: "head" %></li>
        <% else %>
          <li><%= link_to t("books"), books_path, id: "head" %></li>
        <% end %>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("category"), admins_categories_path, id: "head" %></li>
          <% end %>
          <li><%= link_to t("users"), users_path, id: "head" %></li>
          <% if current_user.admin? %>
            <li><%= link_to t("request"), admins_requests_path, id: "head" %></li>
            <li><%= link_to "Báo cáo", admins_reports_path, id: "head" %></li>
          <% else %>
            <li><%= link_to t("request"), requests_path, id: "head" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
