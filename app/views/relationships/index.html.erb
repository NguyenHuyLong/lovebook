<% provide :title, @title %>
<div class="container">
  <div class="col-md-4">
    <section class="user_info">
      <h3><%= user_avatar @user %> <%= link_to @user.name, @user %></h3>
    </section>
    <div class="stats">
      <%= render "shared/stats" %>
    </div>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
